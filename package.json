{
    "name": "multiple-webpack-2",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "install": "run-concurrently install",
        "build": "run-concurrently build",
        "build:watch": "run-concurrently build:watch",
        "prettify": "prettier --write 'scripts/**/*.{js,json,md}'"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@gnoesiboe/run-concurrently": "^0.1.0"
    },
    "devDependencies": {
        "concurrently": "^4.1.0",
        "husky": "^1.3.1",
        "joi": "^14.3.1",
        "lint-staged": "^8.1.5",
        "prettier": "1.16.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,json,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "concurrentTasks": {
        "install": {
            "subTasks": [
                {
                    "workingDirectory": "./assets/a",
                    "command": "npm install",
                    "name": "website"
                },
                {
                    "workingDirectory": "./assets/b",
                    "command": "npm install",
                    "name": "admin"
                },
                {
                    "workingDirectory": "./assets/c",
                    "command": "npm install",
                    "name": "frontend"
                }
            ],
            "options": {
                "prefixLength": 20
            }
        },
        "build": {
            "subTasks": [
                {
                    "workingDirectory": "./assets/a",
                    "command": "npm run build",
                    "name": "website"
                },
                {
                    "workingDirectory": "./assets/b",
                    "command": "npm run build",
                    "name": "admin"
                },
                {
                    "workingDirectory": "./assets/c",
                    "command": "npm run build",
                    "name": "frontend"
                }
            ]
        },
        "build:watch": {
            "subTasks": [
                {
                    "workingDirectory": "./assets/a",
                    "command": "npm run build:watch",
                    "name": "website"
                },
                {
                    "workingDirectory": "./assets/b",
                    "command": "npm run build:watch",
                    "name": "admin"
                },
                {
                    "workingDirectory": "./assets/c",
                    "command": "npm run build:watch",
                    "name": "frontend"
                }
            ]
        }
    }
}
